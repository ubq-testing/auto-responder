{
  "name": "Auto Responder",
  "description": "Issue automated responses on a per-repository level.",
  "ubiquity:listeners": ["issue_comment.created"],
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "automatedResponses": {
        "type": "object",
        "default": {
          "auto-responder": "Hello! Thanks for your comment."
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
